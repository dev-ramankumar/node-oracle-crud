<% title = 'Users' %>

<h2>Users</h2>
<a href="/users/create">Create user</a>
<table>
  <thead>
    <tr><th>ID</th><th>Username</th><th>Email</th><th>Name</th><th>Role</th><th>Actions</th></tr>
  </thead>
  <tbody>
    <% users.forEach(u => { %>
      <tr>
        <td><%= u.id %></td>
        <td><%= u.username %></td>
        <td><%= u.email %></td>
        <td><%= u.fullName %></td>
        <td><%= u.role %></td>
        <td>
          <a href="/users/<%= u.id %>/edit">Edit</a>
          <form method="post" action="/users/<%= u.id %>/delete" style="display:inline">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
