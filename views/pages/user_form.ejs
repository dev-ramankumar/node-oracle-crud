<% title = user ? 'Edit User' : 'Create User' %>

<h2><%= title %></h2>
<form method="post" action="<%= user ? '/users/' + user.id + '/edit' : '/users/create' %>">
  <div>
    <label>Username</label>
    <input name="username" value="<%= user ? user.username : '' %>" required />
  </div>
  <div>
    <label>Email</label>
    <input name="email" value="<%= user ? user.email : '' %>" required />
  </div>
  <div>
    <label>Full name</label>
    <input name="fullName" value="<%= user ? user.fullName : '' %>" />
  </div>
  <div>
    <label>Role</label>
    <input name="role" value="<%= user ? user.role : 'user' %>" />
  </div>
  <div>
    <label>Password</label>
    <input name="password" type="password" <%= user ? '' : 'required' %> />
  </div>
  <button type="submit">Save</button>
</form>
