<header>
  <nav>
    <a href="/">Home</a>

    <% const user = typeof currentUser !== 'undefined' && currentUser ? currentUser : null; %>

    <% if (user) { %>
      <span>Welcome, <%= user.fullName || user.username %></span>
      <a href="/auth/logout">Logout</a>
    <% } else { %>
      <a href="/auth/login">Login</a>
    <% } %>
  </nav>
</header>
